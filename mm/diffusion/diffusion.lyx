\begin_layout Itemize
Let 
\begin_inset Formula $\tau_{\theta}$
\end_inset

 be a domain-specific encoder,
 so that 
\begin_inset Formula $\tau_{\theta}(y)\in\mathbb{R}^{M\times d_{\tau}}$
\end_inset

 (sequence)
\end_layout

\begin_layout Itemize
\begin_inset Formula $Q=W_{Q}^{(i)}\cdot{\color{blue}\varphi_{i}(z_{t})}$
\end_inset

,
 where 
\begin_inset Formula $\varphi_{i}(z_{t})\in\mathbb{R}^{N\times d_{\epsilon}^{i}}$
\end_inset

 is a flattened intermediate representation of UNet.
 
\begin_inset Formula $W_{Q}^{(i)}\in\mathbb{R}^{d\times d_{\tau}}$
\end_inset

 is learnable projection matrix.
\end_layout

\begin_layout Itemize
\begin_inset Formula $K=W_{K}^{(i)}\cdot{\color{red}\tau_{\theta}(y)}$
\end_inset

,
 
\begin_inset Formula $V=W_{V}^{(i)}\cdot{\color{red}\tau_{\theta}(y)}$
\end_inset

.
 The 
\begin_inset Formula $W_{V}^{(i)}\in\mathbb{R}^{d\times d_{\epsilon}^{i}}$
\end_inset

 and 
\begin_inset Formula $W_{K}^{(i)}\in\mathbb{R}^{d\times d_{\tau}}$
\end_inset

 are learnable projection matrices.
\end_layout

\begin_layout Itemize
Cross-attention:
 
\begin_inset Formula $\text{Attention}(Q,K,V)=\text{softmax}\Big(\frac{QK^{T}}{\sqrt{d}}\Big)\cdot V$
